[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "HybridAgent"
version = "0.1.0"
description = "Hybrid agent CLI for generating unified diffs via Ollama and CodexCLI"
readme = "README.md"
requires-python = ">=3.9"
authors = [
  { name = "HybridAgent Maintainers" }
]
classifiers = [
  "Programming Language :: Python :: 3",
  "License :: OSI Approved :: MIT License",
  "Operating System :: OS Independent",
]
dependencies = []

[project.scripts]
ha = "hybrid_agent.cli:main"

[tool.setuptools.packages.find]
where = ["src"]

[tool.setuptools]
package-dir = {"" = "src"}
